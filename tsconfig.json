{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist"
    },
    "lib": [
        "es2015",
        "es2017",
        "dom"
    ],
    "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
    },
    "include": [
        "src/**/*"
    ]
  }